<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.exoplaform.org/xml/ns/kernel_1_2.xsd http://www.exoplaform.org/xml/ns/kernel_1_2.xsd"
               xmlns="http://www.exoplaform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <key>org.gatein.security.oauth.consumer.OAuthService</key>
    <type>org.gatein.security.oauth.consumer.impl.OAuthServiceImpl</type>
    <init-params>
      <value-param>
        <name>oauthEndpoint</name>
        <value>http://localhost:8080/portal/oauthEndpoint</value>
      </value-param>
    </init-params>
  </component>

  <component>
    <key>org.gatein.security.oauth.consumer.OAuthProviderRegistry</key>
    <type>org.gatein.security.oauth.consumer.impl.OAuthProviderRegistryImpl</type>
  </component>
  <component>
    <key>org.gatein.security.oauth.consumer.OAuthConsumerRegistry</key>
    <type>org.gatein.security.oauth.consumer.impl.OAuthConsumerRegistryImpl</type>
  </component>

  <external-component-plugins>
    <target-component>org.gatein.security.oauth.consumer.OAuthProviderRegistry</target-component>
    <component-plugin>
      <name>OAuth provider plugin</name>
      <set-method>addOAuthProvider</set-method>
      <type>org.gatein.security.oauth.consumer.impl.PropertiesOAuthProviderRegistryPlugin</type>
      <init-params>
        <value-param>
          <name>keyPrefix</name>
          <value>${gatein.oauth.provider.prefix:gatein.oauth.provider}</value>
        </value-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
  <external-component-plugins>
    <target-component>org.gatein.security.oauth.consumer.OAuthConsumerRegistry</target-component>
    <component-plugin>
      <name>OAuth consumer plugin</name>
      <set-method>addOAuthConsumer</set-method>
      <type>org.gatein.security.oauth.consumer.impl.PropertiesOAuthConsumerRegistryPlugin</type>
      <init-params>
        <value-param>
          <name>keyPrefix</name>
          <value>${gatein.oauth.consumer.prefix:gatein.oauth.consumer}</value>
        </value-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>


  <external-component-plugins>
    <!-- The full qualified name of the ExtensibleFilter -->
    <target-component>org.exoplatform.web.filter.ExtensibleFilter</target-component>
    <component-plugin>
      <!-- The name of the plugin -->
      <name>Oauth callback Filter Definition Plugin</name>
      <!-- The name of the method to call on the ExtensibleFilter in order to register the FilterDefinitions -->
      <set-method>addFilterDefinitions</set-method>
      <!-- The full qualified name of the FilterDefinitionPlugin -->
      <type>org.exoplatform.web.filter.FilterDefinitionPlugin</type>
      <init-params>
        <object-param>
          <name>Sample Filter Definition</name>
          <object type="org.exoplatform.web.filter.FilterDefinition">
            <!-- The filter instance -->
            <field name="filter">
              <object type="org.gatein.security.oauth.consumer.filter.OAuthCallbackFilter"/>
            </field>
            <!-- The mapping to use -->
            <!-- WARNING: the mapping is expressed with regular expressions -->
            <field name="patterns">
              <collection type="java.util.ArrayList" item-type="java.lang.String">
                <value>
                  <string>/oauthEndpoint</string>
                </value>
              </collection>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

</configuration>